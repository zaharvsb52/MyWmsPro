<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:wmsMLC.General.PL.WPF.Components.Controls.Rcl"
    xmlns:helpers="clr-namespace:wmsMLC.General.PL.WPF.Components.Helpers">

    <system:Double x:Key="FontSizeDefaultKey">14</system:Double>
    <system:Double x:Key="FontSizeMainMenuKey">16</system:Double>
    <system:Double x:Key="FontSizeMainTileMenuKey">25</system:Double>
    <FontStretch x:Key="{x:Static helpers:StyleKeys.FontStretchDefaultKey}">UltraCondensed</FontStretch>

    <!--<Style TargetType="{x:Type dxe:TextEdit}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontStretch" Value="UltraCondensed"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontStretch" Value="UltraCondensed"/>
    </Style>-->
    <Style TargetType="{x:Type local:CustomTextEdit}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeDefaultKey}"/>
        <Setter Property="FontStretch" Value="{StaticResource {x:Static helpers:StyleKeys.FontStretchDefaultKey}}"/>
    </Style>
    <Style TargetType="{x:Type local:CustomPasswordBoxEdit}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeDefaultKey}"/>
        <Setter Property="FontStretch" Value="{StaticResource {x:Static helpers:StyleKeys.FontStretchDefaultKey}}"/>
    </Style>
    <Style TargetType="{x:Type local:CustomTextBlock}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeDefaultKey}"/>
        <Setter Property="FontStretch" Value="{StaticResource {x:Static helpers:StyleKeys.FontStretchDefaultKey}}"/>
    </Style>
</ResourceDictionary>
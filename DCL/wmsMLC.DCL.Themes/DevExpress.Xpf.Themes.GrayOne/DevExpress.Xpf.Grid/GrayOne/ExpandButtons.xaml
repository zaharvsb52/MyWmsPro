                    <GradientStop Color="#d7dadd" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Border CornerRadius="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.829,0.877" StartPoint="0.171,0.123"> <!-- zalivka vnutrenney ploshagi -->
                        <GradientStop Color="White" Offset="0" />
                        <GradientStop Color="#cddeff" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                    <!-- otobrazenie pri svernutom soderzanii -->
                    <Path Stretch="Fill" Fill="Orange" Data="F1 M 1256,774L 1257,774L 1257,776L 1259,776L 1259,777L 1257,777L 1257,779L 1256,779L 1256,777L 1254,777L 1254,776L 1256,776L 1256,774 Z " HorizontalAlignment="Center" VerticalAlignment="Center" Width="5" Height="5" x:Name="path" Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverterInverted}}" />

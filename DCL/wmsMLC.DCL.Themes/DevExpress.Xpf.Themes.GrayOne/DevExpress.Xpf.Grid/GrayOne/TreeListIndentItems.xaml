<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys">

    <ControlTemplate x:Key="{dxgt:TreeListViewThemeKey ResourceKey=IndentItemTemplate}">
        <Path Width="{DynamicResource {dxgt:TreeListViewThemeKey ResourceKey=RowIndent}}" Stroke="Gray" StrokeThickness="1">
            <Path.Data>
                <GeometryGroup>
                    <LineGeometry x:Name="PART_Line1" />
                    <LineGeometry x:Name="PART_Line2" />
                    <LineGeometry x:Name="PART_Line3" />
                </GeometryGroup>
            </Path.Data>
        </Path>
    </ControlTemplate>

</ResourceDictionary>
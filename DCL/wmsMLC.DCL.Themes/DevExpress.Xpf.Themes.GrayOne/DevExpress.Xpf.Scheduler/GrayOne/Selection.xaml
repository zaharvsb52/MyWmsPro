<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal" xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys">

    <ControlTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=SelectionTemplate}" TargetType="dxschd:SchedulerSelection">
        <Grid IsHitTestVisible="False">
            <Path Fill="#FFBAD8FC" StrokeThickness="2" Opacity="0.5">
                <Path.Data>
                    <PathGeometry x:Name="Geometry" FillRule="EvenOdd" />
                </Path.Data>
            </Path>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>
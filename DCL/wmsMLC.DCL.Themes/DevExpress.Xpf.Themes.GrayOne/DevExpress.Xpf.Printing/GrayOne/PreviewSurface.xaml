<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:native="clr-namespace:DevExpress.Xpf.Printing.Native;assembly=DevExpress.Xpf.Printing.v15.2" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <LinearGradientBrush x:Key="BackgroundStyle" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFEBECEF" Offset="0" />
        <GradientStop Color="#FFE2E3E7" Offset="1" />
    </LinearGradientBrush>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Printing.Native.PreviewSurface}" TargetType="{x:Type native:PreviewSurface}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid Background="{StaticResource BackgroundStyle}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

</ResourceDictionary>
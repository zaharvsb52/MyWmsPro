    <!--BEGIN WPF-->
    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Docking.VisualElements.DocumentSelectorContainer}" TargetType="{x:Type ve:DocumentSelectorContainer}">
        <Style.Setters>
            <Setter Property="Foreground" Value="#FF201F35" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ve:DocumentSelectorContainer}">
                        <Grid>
                            <Grid.Effect>
                                <DropShadowEffect x:Name="Shadow" Direction="270" ShadowDepth="1" BlurRadius="5" Opacity="0.15" />
                            </Grid.Effect>
                            <Border x:Name="Window" Background="#FF8591A2" CornerRadius="5" Margin="1">
                                <Grid Margin="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Border x:Name="Header" CornerRadius="4,4,0,0">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFD9DAE0" Offset="0" />
                                                <GradientStop Color="#FFC8C9D0" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel Margin="12,8,12,8" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
                                            <Image Margin="0,0,6,0" Stretch="None" VerticalAlignment="Top" HorizontalAlignment="Left" Source="{Binding Path=(local:DockLayoutManager.LayoutItem).CaptionImage}" />
                                            <StackPanel>
                                                <TextBlock TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontWeight="Bold" Text="{Binding (local:DockLayoutManager.LayoutItem).Caption}" />
                                                <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding (local:DockLayoutManager.LayoutItem).Description}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="Content" Background="#FFEBECEF" BorderBrush="#FFB5B7BF" BorderThickness="0,1,0,0" Grid.Row="1">
                                        <ContentPresenter x:Name="PART_ContainerContent" Content="{Binding}" Margin="12" />
                                    </Border>
                                    <Border x:Name="Footer" BorderBrush="#FFB5B7BF" BorderThickness="0,1,0,0" CornerRadius="0,0,4,4" MinHeight="24" Grid.Row="2">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFD9DAE0" Offset="0" />
                                                <GradientStop Color="#FFC8C9D0" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,0,0" Content="{Binding (local:DockLayoutManager.LayoutItem).FooterDescription}" />
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <ControlTemplate x:Key="{dxt:DocumentSelectorElementsThemeKey ResourceKey=ListBoxItem}" TargetType="{x:Type ListBoxItem}">
        <Grid>
            <Grid x:Name="HoverSelection" Opacity="0">
                <Border CornerRadius="2" BorderThickness="1" Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF4F6FE" Offset="0" />
                            <GradientStop Color="#FFF4F6FE" Offset="1" />
                            <GradientStop Color="#FFECEFF7" Offset="0.25" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFCECFD5" Offset="0" />
                            <GradientStop Color="#FFCECFD5" Offset="1" />
                            <GradientStop Color="#FFACAFB8" Offset="0.25" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border CornerRadius="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE5EBFF" Offset="0" />
                                <GradientStop Color="#FFE4EBFD" Offset="1" />
                                <GradientStop Color="#FFDEE6FE" Offset="0.25" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="Selection" Opacity="0">
                <Border CornerRadius="2" BorderThickness="1" Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF4F6FE" Offset="0" />
                            <GradientStop Color="#FFF4F6FE" Offset="1" />
                            <GradientStop Color="#FFECEFF7" Offset="0.25" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFAEAFB5" Offset="0" />
                            <GradientStop Color="#FFAEAFB5" Offset="1" />
                            <GradientStop Color="#FF8C8F98" Offset="0.25" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border CornerRadius="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE7EDFF" Offset="0" />
                                <GradientStop Color="#FFDEE6FE" Offset="1" />
                                <GradientStop Color="#FFD2DEFC" Offset="0.25" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Border Padding="{TemplateBinding Padding}">
                <ve:CaptionControl DataContext="{Binding}" Margin="3,2,3,2" />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Opacity" TargetName="Selection" Value="1" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" TargetName="HoverSelection" Value="0.5" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>


  <dxcore_unique_xmlns:EnumToObjectConverter x:Key="nongroupedHeaderPositionToPaddingConverter">
    <dxcore_unique_xmlns:EnumToObjectConverter.Values>
      <dxcore_unique_xmlns:EnumObjectProvider x:Key="Single">
        <dxcore_unique_xmlns:EnumObjectProvider.Value>
          <Thickness>3,3,5,3</Thickness>
        </dxcore_unique_xmlns:EnumObjectProvider.Value>
      </dxcore_unique_xmlns:EnumObjectProvider>
      <dxcore_unique_xmlns:EnumObjectProvider x:Key="Left">
        <dxcore_unique_xmlns:EnumObjectProvider.Value>
          <Thickness>3,3,2,3</Thickness>
        </dxcore_unique_xmlns:EnumObjectProvider.Value>
      </dxcore_unique_xmlns:EnumObjectProvider>
      <dxcore_unique_xmlns:EnumObjectProvider x:Key="Right">
        <dxcore_unique_xmlns:EnumObjectProvider.Value>
          <Thickness>3,3,5,3</Thickness>
        </dxcore_unique_xmlns:EnumObjectProvider.Value>
      </dxcore_unique_xmlns:EnumObjectProvider>

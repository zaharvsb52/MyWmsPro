    <Style x:Key="SliderThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Foreground" Value="{x:Null}" />
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="MinWidth" Value="11" />
        <Setter Property="MinHeight" Value="11" />
        <Setter Property="MaxWidth" Value="21" />
        <Setter Property="MaxHeight" Value="21" />        
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Grid>
                        <Border x:Name="Shadow" Background="#FF000000">
                            <Border.OpacityMask>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#00000000" Offset="0" />
                                    <GradientStop Color="#00000000" Offset="1" />
                                    <GradientStop Color="#FF000000" Offset="0.5" />
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                            <Border.Effect>
                                <DropShadowEffect Direction="90" ShadowDepth="0" BlurRadius="3" Opacity="0.5" />
                            </Border.Effect>
                        </Border>
                        <Border x:Name="DefaultState" Background="{StaticResource SliderThumb.DefaultState.Border1}" Padding="1">
                            <Border Background="{StaticResource SliderThumb.DefaultState.Border3}" BorderBrush="{StaticResource SliderThumb.DefaultState.Border2}" BorderThickness="1" />
                        </Border>
                        <Border x:Name="HoverState" Background="{StaticResource SliderThumb.HoverState.Border1}" Padding="1" Opacity="0">
                            <Border Background="{StaticResource SliderThumb.HoverState.Border3}" BorderBrush="{StaticResource SliderThumb.HoverState.Border2}" BorderThickness="1" />
                        </Border>
                        <Border x:Name="PressedState" Background="{StaticResource SliderThumb.PressedState.Border1}" Padding="1" Opacity="0">
                            <Border Background="{StaticResource SliderThumb.PressedState.Border3}" BorderBrush="{StaticResource SliderThumb.PressedState.Border2}" BorderThickness="1" />
                        </Border>
                        <Border x:Name="DisabledState" Background="{StaticResource SliderThumb.DisabledState.Border1}" Padding="1" Opacity="0">
                            <Border Background="{StaticResource SliderThumb.DisabledState.Border3}" BorderBrush="{StaticResource SliderThumb.DisabledState.Border2}" BorderThickness="1" />
                        </Border>                      
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="DefaultState" Property="Opacity" Value="0" />
                            <Setter TargetName="HoverState" Property="Opacity" Value="1" />
                            <Setter TargetName="PressedState" Property="Opacity" Value="0" />
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter Property="Effect" TargetName="Shadow">
                                <Setter.Value>
                                    <DropShadowEffect Opacity="0" />
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="DefaultState" Property="Opacity" Value="0" />
                            <Setter TargetName="HoverState" Property="Opacity" Value="0" />
                            <Setter TargetName="PressedState" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Effect" TargetName="Shadow">
                                <Setter.Value>
                                    <DropShadowEffect Opacity="0" />
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="DefaultState" Property="Opacity" Value="0" />
                            <Setter TargetName="HoverState" Property="Opacity" Value="0" />
                            <Setter TargetName="PressedState" Property="Opacity" Value="0" />
                            <Setter TargetName="DisabledState" Property="Opacity" Value="1" />
                            <Setter Property="Foreground" Value="{StaticResource Text.DisabledState.Foreground}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


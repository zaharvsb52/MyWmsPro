<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys">

    <ControlTemplate x:Key="{dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Border Height="1" SnapsToDevicePixels="True">
            <Border.Background>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="#00B6B9BB" Offset="0" />
                    <GradientStop Color="#00B6B9BB" Offset="1" />
                    <GradientStop Color="#FFB6B9BB" Offset="0.5" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </ControlTemplate>

    <Style x:Key="{dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderStyle}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Setter Property="Margin" Value="0,1,0,1" />
        <Setter Property="Template" Value="{DynamicResource {dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderTemplate}}" />
    </Style>

</ResourceDictionary>
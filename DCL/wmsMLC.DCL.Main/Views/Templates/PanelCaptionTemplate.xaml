<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxdove="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements">

    <DataTemplate x:Key="PanelCaptionTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image Stretch="Fill" MaxHeight="16" MaxWidth="16" Source="{Binding DataContext.CaptionImage, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxdove:TemplatedCaptionControl}}" />
            <TextBlock Text="{Binding}" Margin="2,0,0,0"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>

